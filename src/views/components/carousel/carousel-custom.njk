{% set carouselItems = [{title:"Light mask", description: "First text", image: "https://mdbootstrap.com/img/Photos/Slides/img%20(68).jpg" },
 {title:"Strong mask", description: "Secondary text", image: "https://mdbootstrap.com/img/Photos/Slides/img%20(6).jpg"}, 
 {title:"Slight mask", description: "Third text", image: "https://mdbootstrap.com/img/Photos/Slides/img%20(9).jpg"}]%}
{# {% set icons =  [{ title: "prev"}, {title: "next"}]%} #}

 <div class="container">
    <div class="row">
        <div class="col-md-12">
      <div id="carousel-example-2" class="carousel slide carousel-fade" data-ride="carousel">
        <ol class="carousel-indicators">
          <li data-target="#carousel-example-2" data-slide-to="0" class="active"></li>
          <li data-target="#carousel-example-2" data-slide-to="1"></li>
          <li data-target="#carousel-example-2" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
        {%for item in carouselItems %}
          {%if loop.first== true %}
          <div class="carousel-item active">
          {%else%}
          <div class="carousel-item">
          {%endif%}
            <div class="view">
              <img class="d-block w-100" src= '{{item.image}}' alt="slide-img">
              <div class="mask rgba-black-light"></div>
            </div>
            <div class="carousel-caption">
              <h3 class="h3-responsive">{{item.title}}</h3>
              <p>{{item.description}}</p>
            </div>
          </div>
          {%endfor%}
        </div>
        {# {% for item in icons%}
        <a class="carousel-control-{{item.title}}" href="#carousel-example-2" role="button" data-slide="{{item.title}}">
          <span class="carousel-control-{{item.title}}-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        {%endfor%} #}
      </div>
              </div>
      </div>
    </div>
